<%include ../partials/header%>
<div class="container">
    <div class="row mt-4">
        <div class="col-lg-3">
            <p class="lead">Camp-vas</p>
            <div class="list-group">
                <li class="list-group-item active">item-1</li>
                <li class="list-group-item">item-2</li>
                <li class="list-group-item">item-3</li>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="thumbnail row mb-5 rounded border">
                <img src="<%=campground.image%>" alt="<%=campground.image%>" class="img-fluid image rounded  mb-4">
                <div class="caption-full p-4 w-100">
                    <h3><a href="#"><%=campground.name%></a><span><h4 class="float-right">$9.00/night</h4></span></h3>
                    <p><%=campground.description%></p>
                    <em><p class="w-100" style="text-align: right;"> - <%=campground.author.username%></p></em>
                    <a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                    <form id="deleteForm"method="post" action="/campgrounds/<%=campground._id%>?_method=DELETE">
                        <button type="submit" class="btn btn-danger ">Delete campground</button>
                    </form>
                </div>
            </div>
            </div>
            <div class="card w-100">
                <h4 class="card-header">
                Reviews
                <a class="float-right btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Leave a review</a></h5>
                <div class="card-body">
                    <% campground.comments.forEach(comment => { %>
                        <div class="comment row border border-0 mb-2 pt-3 rounded">
                            <div class="col-md-12">
                                <strong><%=comment.author.username%></strong>
                                <span class="float-right badge badge-pill badge-primary m-2">10 days ago</span>
                                <p>
                                    <%=comment.text%>
                                </p>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    
</p>

<%include ../partials/footer%>